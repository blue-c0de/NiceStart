<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonflat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:backgroundTint">@color/button_custom</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">@color/purple_500</item>
    </style>

    <style name="buttonoutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="ok">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:backgroundTint">@color/cafe</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="buttonAll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/varela_round</item>
    </style>

    <style name="img_main">
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="img_btn">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
</resources>